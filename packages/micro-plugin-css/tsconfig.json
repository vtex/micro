{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": [
      "lib/typings",
      "router/typings",
      "plugins/typings",
      "components/typings"
    ],
    "target": "es2019",
    "lib": ["ES2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/build/cjs",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["index.ts", "lib", "router", "plugins", "components"],
  "exclude": ["dist", "pages"]
}
