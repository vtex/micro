{
  "name": "micro.js",
  "version": "1.0.0",
  "description": "A Micro FrontEnd Framework",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean && lerna run clean",
    "format": "prettier --write \"packages/**/*.{ts,js,tsx,jsx,json}\"",
    "lint": "eslint packages/ --ext .js,.ts,.jsx,.tsx"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@vtex/prettier-config": "^0.3.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.22",
    "eslint": "^7.1.0",
    "eslint-config-vtex-react": "^6.5.0",
    "husky": "^4.2.0",
    "lerna": "^3.22.0",
    "lint-staged": "^10.0.2",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  }
}
