{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["typings"],
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/build/cjs",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist"]
}
